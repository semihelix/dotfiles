#!/bin/bash
# Disable conky and composite manager
# for better move experience

start() {
  pkill xcompmgr
  pkill conky
  pkill dzen2
  exit
}

stop() {
  dzen-conky.sh &
  xcompmgr &
  exit
}

help() {
  echo "Movie Mode:"
  echo "   (re)start: moviemode"
  echo "   stop:      moviemode -s"
  exit
}


case "$1" in
  "")   start ;;
"-s")   stop ;;
    *)  help ;;
  esac
